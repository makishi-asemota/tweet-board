<form method="POST" action="/new" enctype="multipart/form-data" >
  <h2>Welcome New User!</h2>

  <div>
    <label>Name:</label>
    <input type="text" name="name" value="<%= user.name %>"/>
  </div>
  
  <div>
    <label>Create Username:</label>
    <input type="text" name="userName" value="<%= user.userName %>"/>
  </div>
  
  <div>
    <label>Birthday</label>
    <input type="date" name="birthday"
        value="<%= user.birthday == null ? '' : user.birthday.toISOString().split('T')[0] %>">
  </div>
  
  <div>
    <label>Password:</label>
    <input type="text" name="password" value="<%= user.password %>" placeholder="Under 5 letter nouns please."/>
  </div>
  
  <div>
    <label>Status:</label>
    <input type="textarea" name="messageText" value="<%= user.status %>"/>
  </div>
  
  <button type="submit">Submit</button>
</form>